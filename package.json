{
  "name": "github-pr-autolabel",
  "version": "0.4.0",
  "description": "Set labels to automatically add when opening a GitHub PR.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist-chromium/",
    "build": "npm run clean && yarn build:chromium && yarn build:firefox",
    "build:chromium": "cross-env BROWSER_TYPE=chromium yarn run:webpack",
    "build:firefox": "cross-env BROWSER_TYPE=firefox yarn run:webpack",
    "run:webpack": "webpack --production --progress",
    "dev": "npm run clean && webpack --progress"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      "last 5 Chrome versions",
      "last 5 Firefox versions",
      "Firefox ESR"
    ],
    "development": [
      "last 5 Chrome versions",
      "last 5 Firefox versions"
    ]
  },
  "keywords": [
    "github",
    "pr",
    "pull request",
    "label"
  ],
  "author": "Marko AntoliÄ‡",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.2.1",
    "@testing-library/user-event": "^11.3.2",
    "@types/chrome": "^0.0.114",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.12",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "copy-webpack-plugin": "^6.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^3.5.3",
    "eslint": "^7.0.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sass": "^1.32.4",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.4",
    "typescript": "^3.9.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "yargs": "^15.3.1"
  },
  "dependencies": {
    "@types/classnames": "^2.2.10",
    "bootstrap": "^4.5.0",
    "classnames": "^2.2.6",
    "delegated-events": "^1.1.2",
    "framer-motion": "^1.11.0",
    "normalize.css": "^8.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "toastify-js": "^1.8.0",
    "uuid": "^8.1.0"
  }
}
